{
  "compilerOptions": {
    "outDir": "dist",
    "jsx": "react",
    "lib": ["DOM", "ES2018"],
    "module": "ES2015",
    "esModuleInterop": false,
    "importHelpers": false,
    "target": "ES2018",
    "preserveConstEnums": true,
    "sourceMap": true,
    "declaration": true,
    "types": ["node"],
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "alwaysStrict": true,
    "strictFunctionTypes": true,
    "moduleResolution": "nodenext"
  },
  "include": ["src"]
}
